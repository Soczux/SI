{% extends 'base.html.twig' %}

{% block title %}{{ 'pages.albums' | trans | capitalize }}{% endblock %}

{% block content %}
    <table id="albums-table">
        <thead>
        <tr>
            <th>{{ 'album.title' | trans }}</th>
            <th>{{ 'album.artist' | trans }}</th>
            <th>{{ 'album.cover' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.name }}</td>
                <td>{{ album.getArtist().getName() }}</td>
                <td><img src="{{ asset('build/gfx/' ~ album.getLogoUrl()) }}" alt="{{ album.name }}"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
