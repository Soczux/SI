{% extends 'base.html.twig' %}

{% block title %}{{ 'pages.songs' | trans | capitalize }}{% endblock %}

{% block content %}
    <table id="songs-table">
        <thead>
            <tr>
                <th>{{ 'song.title' | trans }}</th>
                <th>{{ 'song.artist' | trans }}</th>
                <th>{{ 'song.play' | trans }}</th>
                <th>{{ 'song.more' | trans }}</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>{{ 'song.edit' | trans }}</th>
                    <th>{{ 'song.delete' | trans }}</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for song in pagination.items %}
            <tr>
                <td>{{ song.title }}</td>
                <td>{{ song.artist.name }}</td>
                <td>
                    <audio controls>
                        <source src="{{ asset('audio/songs/' ~ song.url) }}">
                        Your browser does not support the audio element.
                    </audio>
                </td>
                <td>
                    <a href="{{ path('song', { 'id': song.id }) }}">...</a>
                </td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path('admin_panel_song_edit', { 'id': song.id }) }}">E</a>
                    </td>
                    <td>
                        <a href="{{ path('admin_panel_song_delete', { 'id': song.id }) }}">X</a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
