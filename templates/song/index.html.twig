{% extends 'base.html.twig' %}

{% block title %}{{ 'pages.songs' | trans | capitalize }}{% endblock %}

{% block content %}
    <table id="songs-table">
        <thead>
            <tr>
                <th>{{ 'song.title' | trans }}</th>
                <th>{{ 'song.artist' | trans }}</th>
                <th>{{ 'song.play' | trans }}</th>
                {% if is_granted('ROLE_ADMIN') %}
                <th>X</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.title }}</td>
                <td>{{ song.getArtist().getName() }}</td>
                <td>
                    <audio controls>
                        <source src="{{ asset('audio/songs/' ~ song.getUrl()) }}">
                        Your browser does not support the audio element.
                    </audio>
                </td>
                {% if is_granted('ROLE_ADMIN') %}
                <td>
                    <a href="{{ path('song_delete', { 'id': song.id }) }}">X</a>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
