{% extends 'admin_panel/index.html.twig' %}

{% block title %}{{ 'pages.admin_panel.user_management' | trans }}{% endblock %}

{% block subcontent %}
    <div>
        {% if pagination is defined and pagination.items | length %}
            <div class="pagination_navigation">
                {{ knp_pagination_render(pagination) }}
            </div>

            <table class="table table-striped" id="users-table">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'user.username' | trans, 'user.username') }}</th>
                    <th>{{ 'user.email' | trans }}</th>
                    <th>{{ 'actions.label' | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in pagination.items %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a class="btn btn-sm btn-outline-success" href="{{ path('user', { 'id': user.id }) }}"><div>{{ 'actions.show' | trans }}</div></a>
                            <a class="btn btn-sm btn-outline-info" href="{{ path('admin_panel_user_edit', { 'id': user.id }) }}"><div>{{ 'actions.edit' | trans }}</div></a>
                            <a class="btn btn-sm btn-outline-danger" href="{{ path('admin_panel_user_delete', { 'id': user.id }) }}"><div>{{ 'actions.delete' | trans }}</div></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="pagination_navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
